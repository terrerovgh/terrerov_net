options {
    directory "/var/cache/bind";
    forwarders {
        1.1.1.1;
        1.0.0.1;
    };
    allow-query { any; };
    allow-recursion { any; };
    listen-on { any; };
    listen-on-v6 { any; };
    dnssec-validation auto;
    auth-nxdomain no;
    version none;
    recursion yes;
    notify yes;
};